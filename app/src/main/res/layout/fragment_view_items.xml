<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="#ffcc29"
    tools:context=".ViewItemsFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="1000px"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="10dp"
        card_view:cardMaxElevation="12dp"
        card_view:cardBackgroundColor="#ffff"
        card_view:cardPreventCornerOverlap="true"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#ffff"
            android:padding="12dp">

            <TextView
                android:id="@+id/rn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:textStyle="bold"
                android:text="Food Name"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"/>

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:maxHeight="20dp"
                android:src="@drawable/clock_foreground"
                android:layout_below="@+id/rn"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day,"
                android:textSize="10dp"
                android:layout_toEndOf="@+id/imageView1"
                android:layout_below="@+id/rn"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="2dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Time"
                android:textSize="10dp"
                android:layout_toEndOf="@+id/day"
                android:layout_below="@id/rn"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="3dp"/>

            <TextView
                android:id="@+id/p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="#ff00"
                android:layout_below="@+id/imageView1"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:maxHeight="100dp"
                android:src="@drawable/food_photo"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:text="3 units left"
                android:textColor="#ffff"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="5dp"
                android:background="#206A5D"
                android:textAlignment="center"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="10dp"
        card_view:cardMaxElevation="12dp"
        card_view:cardBackgroundColor="#ffff"
        card_view:cardPreventCornerOverlap="true"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#ffff"
            android:padding="12dp">

            <TextView
                android:id="@+id/rn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:textStyle="bold"
                android:text="Food Name"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"/>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:maxHeight="20dp"
                android:src="@drawable/clock_foreground"
                android:layout_below="@+id/rn1"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/day1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day,"
                android:textSize="10dp"
                android:layout_toEndOf="@+id/imageView2"
                android:layout_below="@+id/rn1"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="2dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Time"
                android:textSize="10dp"
                android:layout_toEndOf="@+id/day1"
                android:layout_below="@id/rn1"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="3dp"/>

            <TextView
                android:id="@+id/p1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="#ff00"
                android:layout_below="@+id/imageView2"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:maxHeight="100dp"
                android:src="@drawable/food_photo"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:text="1 unit left"
                android:textColor="#ffff"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="5dp"
                android:background="#206A5D"
                android:textAlignment="center"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    </LinearLayout>
    </ScrollView>

</FrameLayout>